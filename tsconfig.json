{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "CommonJS",
    "target": "es2022",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  }
}
